    <div class="container">
        <div class="card form-control" id="realizar_pergunta">
            <div class="card-header">
                <h3 class="text-left">Realizar Pergunta</h3>
            </div>

            <div class="card-body">
                <form method="post" action="/salvarDuvida" class="form-control">
                    <label>Título da Pergunta</label>
                    <input type="text" class="form-control" name="titulo" placeholder="INFORME O TÍTULO DA SUA DÚVIDA!"><br>
                    <label>Descrição da Pergunta</label>
                    <textarea class="form-control" name="descricao" placeholder="DESCREVA COM DETALHES A SUA DÚVIDA!"></textarea><BR>
                    <div class="text-center">
                        <button class="btn btn-outline-secondary ">Enviar Pergunta</button>
                    </div> 
                </form>
            </div>
        </div>
    </div>
</body>
