<body>
    <%- include('partials/navbar.ejs') %>
    <BR>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <a href="/perguntar" class="btn btn-outline-secondary">PERGUNTE AQUI</a>
                <hr>
                <h4 class="text-center">Perguntas:</h4>
            </div>
