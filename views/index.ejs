            <% perguntas.forEach(pergunta => {%>
                <br>
                <div class="card">
                    <div class="card-body">
                        <h3><%= pergunta.titulo %></>
                    </div>
                    <div class="card-footer">
                        <a href="/responder/<%= pergunta.id %>"><button class="btn btn-outline-secondary">Responder</button></a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
