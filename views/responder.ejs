<%- include('partials/header.ejs')%>
<body>
    <%- include('partials/navbar.ejs')%>

    <div class="container">
        <br><br>
        <div class="card">
            <div class="card-header">
                <h1><%= pergunta.titulo%></h1>
                <p><%= pergunta.descricao%></p>
            </div>
            <div class="card-body">
                <form method="post" action="/responder">
                    <h2>Resposta:</h2>
                    <textarea class="form-control" placeholder="DIGITE AQUI A SUA RESPOSTA PARA ESTA PERGUNTA!" name="corpo"></textarea><br>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-outline-secondary">responder</button>
                </form>
            </div>
            <hr>
            <div class="card-footer">
                <h3>Respostas</h3>
                <% respostas.forEach(resposta => {%>
                    <br>
                    <div class="card-body">
                        <p><%= resposta.corpo %></p>
                        <hr>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
<%- include('partials/footer.ejs')%>